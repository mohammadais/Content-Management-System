<h1>Comments</h1>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>comment</th>
      <th>Owner</th>
      <th>approveComments</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>

      {{#each comments}}

    <tr>
      <th>{{id}}</th>
      <th>{{body}}</th>
      <td>{{user.firstName}}</td>
        <td><input data-id="{{id}}" type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"></td>
      <td>{{generateTime date 'MMMM Do YYYY'}}</td>
        <td>
            <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">DELETE</button>
            </form>
        </td>
    </tr>

        {{/each}}

  </tbody>
</table>
